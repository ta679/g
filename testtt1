            nameInput.TextColor3 = CONFIG.COLORS.TEXT_PRIMARY
            nameInput.PlaceholderText = "Enter script name..."
            nameInput.Text = ""
            nameInput.ZIndex = 101
            nameInput.Parent = saveDialog
            
