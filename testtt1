        scriptName.TextColor3 = CONFIG.COLORS.TEXT_PRIMARY
        scriptName.TextXAlignment = Enum.TextXAlignment.Left
        scriptName.Text = name
        scriptName.ZIndex = 6
        scriptName.Parent = scriptButton
        
