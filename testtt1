        EXECUTE = "rbxassetid://7733774602",       -- Execute/play icon
        SCRIPTS = "rbxassetid://7743875962",       -- Scripts icon
        SETTINGS = "rbxassetid://7734053495",      -- Settings/gear icon
        CLOSE = "rbxassetid://7743878857",         -- X icon
